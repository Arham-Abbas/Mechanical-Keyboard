<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Mechanical_Keyboard.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <!-- 1. Apply Mica backdrop for a modern, translucent look -->
    <Window.SystemBackdrop>
        <MicaBackdrop Kind="Base"/>
    </Window.SystemBackdrop>

    <!-- This Grid is the key to fixing the drag issue. -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/> <!-- A dedicated, non-interactive area for the title bar -->
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- This is the ONLY draggable area. -->
        <Grid x:Name="AppTitleBar" Grid.Row="0"/>

        <!-- NavigationView for modern, organized settings -->
        <NavigationView x:Name="NavView"
                        Grid.Row="0" Grid.RowSpan="2"
                        PaneDisplayMode="Left"
                        IsBackButtonVisible="Collapsed"
                        IsSettingsVisible="False"
                        Header="General">
            <NavigationView.MenuItems>
                <!-- Give the General item a name -->
                <NavigationViewItem x:Name="GeneralNavItem" Content="General" Tag="GeneralPage" Icon="Setting"/>
                <NavigationViewItem Content="Sound Packs" Tag="SoundPacksPage" Icon="Audio"/>
                <NavigationViewItemSeparator/>
                <NavigationViewItem Content="About" Tag="AboutPage" Icon="Help"/>
            </NavigationView.MenuItems>

            <!-- The Frame will host our different settings pages -->
            <Frame x:Name="ContentFrame">
                <!-- Main Settings Content -->
                <Grid>
                    <StackPanel Margin="24" Spacing="8" MaxWidth="600" HorizontalAlignment="Left">
                        <ToggleSwitch x:Name="EnableToggle"
                                      Header="Enable Mechanical Keyboard"
                                      IsOn="{x:Bind ViewModel.IsEnabled, Mode=TwoWay}"/>
                        
                        <!-- The Volume Slider, with a reasonable size and enabled state -->
                        <Slider Header="Volume"
                                Value="{x:Bind ViewModel.Volume, Mode=TwoWay}"
                                Minimum="0"
                                Maximum="100"
                                StepFrequency="1"
                                Margin="0,16,0,0"
                                IsEnabled="{x:Bind EnableToggle.IsOn, Mode=OneWay}"/>
                    </StackPanel>
                </Grid>
            </Frame>
        </NavigationView>
    </Grid>
</Window>
