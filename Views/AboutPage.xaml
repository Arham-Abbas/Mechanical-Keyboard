<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Mechanical_Keyboard.Views.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Margin="24" Spacing="12" MaxWidth="600" HorizontalAlignment="Left">
            <TextBlock Text="Mechanical Keyboard" Style="{ThemeResource SubtitleTextBlockStyle}"/>
            <TextBlock Text="Version 1.0.0" Style="{ThemeResource BodyTextBlockStyle}"/>
            <TextBlock Text="Created by Arham" Style="{ThemeResource BodyTextBlockStyle}"/>
            <TextBlock Text="A lightweight app that provides mechanical keyboard sound emulation." 
                       Style="{ThemeResource BodyTextBlockStyle}" 
                       TextWrapping="Wrap"
                       Margin="0,12,0,0"/>
        </StackPanel>
    </Grid>
</Page>
