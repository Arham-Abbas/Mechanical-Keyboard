<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Mechanical_Keyboard.Views.SoundPacksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Margin="24" Spacing="12" MaxWidth="600" HorizontalAlignment="Left">
            <!-- The redundant TextBlock header has been removed from here. -->

            <TextBlock Text="Available Sound Packs" Style="{ThemeResource SubtitleTextBlockStyle}" />

            <!-- This ListView displays the available sound packs -->
            <ListView
                ItemsSource="{x:Bind ViewModel.SoundPacks}"
                SelectedItem="{x:Bind ViewModel.SelectedSoundPack, Mode=TwoWay}"
                SelectionMode="Single">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Margin="0,4"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!-- This button allows users to import a new sound pack -->
            <Button Command="{x:Bind ViewModel.ImportSoundPackCommand}" HorizontalAlignment="Left" Margin="0,12,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <FontIcon Glyph="&#xE8B5;" />
                    <TextBlock Text="Import Sound Pack..."/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Page>
