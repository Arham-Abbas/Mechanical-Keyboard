<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Mechanical_Keyboard.Views.GeneralPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <StackPanel Margin="24" Spacing="8" MaxWidth="600" HorizontalAlignment="Left">
            <ToggleSwitch x:Name="EnableToggle"
                          Header="Enable Mechanical Keyboard"
                          IsOn="{x:Bind ViewModel.IsEnabled, Mode=TwoWay}"/>
            
            <Slider Header="Volume"
                    Value="{x:Bind ViewModel.Volume, Mode=TwoWay}"
                    Minimum="0"
                    Maximum="100"
                    StepFrequency="1"
                    Margin="0,16,0,0"
                    IsEnabled="{x:Bind EnableToggle.IsOn, Mode=OneWay}"/>
        </StackPanel>
    </Grid>
</Page>
